<h2>Books</h2>
<% @books.each do |book| %>

<h5>titile</h5>
<span><%= book.title %></span>

<h5>Body</h5>
<span><%= book.body %></span>

<span><%= link_to "Show",　book_path(book.id)　%></span>
<span><%= link_to "Edit",　edit_book_path(book.id)　%></span>
<span><%=link_to "Destroy", book_path(book.id), method: :delete,"data-confirm" => "Are you sure?" %></span>
<!--上の二つのルートがなぜ繋がらんのや？-->
<% end %>







<h2>New book</h2>
<%=form_with model: @book do |f| %>
<h5>Title</h5>
<%= f.text_field :title %>

<h5>Body</h5>
<%=f.text_area :body %>


<%= f.submit 'Create Book' %>

<% end %>